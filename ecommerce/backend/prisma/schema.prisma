generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  firstName String?
  lastName  String?
  picture   String?
  provider  String   // Ex.: 'google', 'facebook'
  providerId String  @unique // ID Ãºnico da rede social
  score     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  logs      Logs[]
}

model Logs {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User    @relation(fields: [userId], references: [id])
  message   String
  roundId   Int?    @unique
  orderId   Int?    @unique
  value     Int
  timestamp DateTime @default(now())
}